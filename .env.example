# API Keys for embedding services
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_GENAI_API_KEY=your_google_genai_api_key_here

# Database Configuration
DB_HOST=localhost
DB_PORT=5437
DB_NAME=gitcontext
DB_USER=postgres
DB_PASSWORD=postgres

# Processing Configuration
BATCH_SIZE=5
PARALLEL_WORKERS=5
MAX_FILE_SIZE_MB=10

# Github token
GITHUB_TOKEN=your_github_token_here

# Neon DB connection settings
DB_HOST=your-project-id.neon.tech   # From your Neon connection string
DB_PORT=5432                         # Standard PostgreSQL port for Neon
DB_USER=your-username               # Username from Neon connection details
DB_PASSWORD=your-password           # Password from Neon connection details
DB_NAME=gitcontext                  # Your database name
DB_SSLMODE=require                  # Required for Neon DB
DB_SERVERLESS=true                  # Enables serverless optimizations
DB_USE_POOLER=true                  # Use Neon's connection pooler (recommended)